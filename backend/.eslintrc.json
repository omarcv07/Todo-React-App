{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": "standard",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "max-len": ["error", 100],
    "object-curly-spacing": ["error", "always"],
    "camelcase": "off"
  }
}
