{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "standard-with-typescript"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "semi": ["error", "always"],
    "indent": ["error", 4],
    "quotes": ["error", "single"],
    "max-len": ["error", 100],
    "object-curly-spacing": ["error", "always"]
  }
}
